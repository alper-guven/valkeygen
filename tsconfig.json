{
	"compilerOptions": {
		"target": "ES2020", // Target modern JavaScript
		"module": "ESNext", // Use ESNext for ESM builds
		"declaration": true, // Generate type declaration files
		"outDir": "./dist", // Output directory for builds
		"strict": true, // Enable all strict type-checking options
		"esModuleInterop": true, // Enable interop between CommonJS and ES Modules
		"forceConsistentCasingInFileNames": true, // Ensure consistent file casing
		"skipLibCheck": true // Skip checking of declaration files
	},
	"exclude": ["node_modules", "test", "dist"],
	"references": [
		{ "path": "./tsconfig.esm.json" },
		{ "path": "./tsconfig.cjs.json" }
	]
}
